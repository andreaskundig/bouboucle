{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    /* we define the following paths so the dts plugin can resolve the references
       see vite.config.js.
    */
    "paths": {
      "@andreaskundig/looper": ["../looper/index.js"],
      "@andreaskundig/looper-ui": ["../looper-ui/index.js"],
      "paper/dist/paper-core": ["../../node_modules/paper/dist/paper-core"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
}
